{
  "name": "debloat-tool",
  "version": "1.0.0",
  "description": "PC Egyszeregy Debloat Tool - Hordozható verzió",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win portable"
  },
  "author": "pcegyszeregy.hu",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "hu.pcegyszeregy.debloattool",
    "productName": "Debloat Tool",
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "portable": {
      "artifactName": "DebloatTool-Portable.exe"
    }
  }
}
